{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/person/nationalityData.json",
  "title": "nationalityData",
  "type": "object",
  "properties": {
    "status": { "type": "integer", "enum": [0,1,2] },
    "countries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "country": { "type": "string", "minLength": 2 },
          "validFrom": { "type": "string", "format": "date" }
        },
        "required": ["country"],
        "additionalProperties": false
      }
    }
  },
  "required": ["status"],
  "additionalProperties": false
}
