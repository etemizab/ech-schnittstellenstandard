{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "person",
  "type": "object",
  "properties": {
    "personIdentification": { "$ref": "../shared/identifiers.json" },
    "nameData":    { "$ref": "./nameData.json" },
    "birthData":   { "$ref": "./birthData.json" },
    "religionData": { "type": "object", "properties": {
        "religion": { "type": "integer" },
        "validFrom": { "type": "string", "format": "date" }
      }, "required": ["religion"], "additionalProperties": false
    },
    "maritalData": { "type": "object" },
    "nationalityData": { "$ref": "./nationalityData.json" },
    "deathData": { "type": "object" },
    "contactData": { "type": "object" },
    "languageOfCorrespondence": { "type": "string", "minLength": 2 },
    "placeOfOrigin": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "originName": { "type": "string" },
          "canton": { "type": "string", "minLength": 2 }
        },
        "required": ["originName","canton"],
        "additionalProperties": false
      }
    },
    "residence": { "$ref": "../residence/residenceData.json" }
  },
  "required": ["personIdentification", "nameData", "birthData", "religionData", "maritalData", "nationalityData", "residence"],
  "additionalProperties": false
}
