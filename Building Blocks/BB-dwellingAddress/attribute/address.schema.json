{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/ech-0011/building-blocks/BB-dwellingAddress/address.schema.json",
  "title": "address – Physische Adresse",
  "type": "object",
  "description": "Physische Wohnadresse (vereinfachte Struktur auf Basis eCH-0010/eCH-0011).",
  "additionalProperties": false,
  "properties": {
    "street": {
      "type": "string",
      "description": "Strasse und Hausnummer."
    },
    "zipCode": {
      "type": "string",
      "description": "Postleitzahl."
    },
    "town": {
      "type": "string",
      "description": "Ort/Gemeinde."
    },
    "country": {
      "type": "string",
      "description": "Ländercode nach ISO 3166-1 Alpha-2.",
      "minLength": 2,
      "maxLength": 2
    }
  },
  "required": ["street", "zipCode", "town", "country"]
}
